{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "description": "<%= typeof description === 'string' ? description : 'Nodejs TypeScript project description to complete' %>",
  "private": true,
  "main": "build/lib/<%= projectName %>.js",
  "types": "build/lib/<%= projectName %>",
  "scripts": {
    "clean": "npm run clean:build && npm run clean:dist",
    "clean:dist": "rimraf dist/**",
    "clean:build:lib": "rimraf build/lib/**",
    "clean:build:test": "rimraf build/test/**",
    "clean:build": "rimraf build/**",
    "build": "npm run build:lib",
    "build:lib": "npm run clean:build:lib && cpx src/types/**/*.d.ts build/types/ && tsc -p src/lib",
    "build:test": "npm run clean:build:test && cpx src/types/**/*.d.ts build/types/ && tsc -p src/test",
    "prepublishOnly": "npm run build",
    "lint": "tslint -p .",
    "test": "mocha --opts src/test/mocha.opts src/test/**/*.test.ts",
    "cover": "nyc npm test",
    "check:cover": "nyc npm test -- --forbid-only && nyc check-coverage --lines 80",
    "check": "npm run clean && npm run build && npm run lint && npm run check:cover"
  },
  "author": "<%= authorFirstName %> <%= authorLastName %> <<%= authorEmail %>> (<%= authorWebsite %>)",
  "repository": {
    "type": "git",
    "url": "<%= gitUrl %>"
  },
  "bugs": {
    "url": "<%= issueUrl %>"
  },
  "engines": {
    "node": ">= 8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test -- --forbid-only",
      "pre-push": "npm run check"
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7.1.0",
    "@types/es6-promise": "^3.3.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.8",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^4.3.3",
    "@types/sinon-chai": "^2.7.31",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cpx": "^1.5.0",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "source-map-support": "^0.5.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "typescript": "^2.6.2"
  }
}
